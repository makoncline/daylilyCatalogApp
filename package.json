{
  "name": "My_Project_Here",
  "version": "1.0.1",
  "private": true,
  "description": "Description of project here",
  "scripts": {
    "clean": "rm -Rf @app/*/dist @app/client/.next",
    "setup": "./scripts/setup",
    "start": "./scripts/check-setup && yarn run dev",
    "test": "./scripts/test",
    "test:watch": "./scripts/test --watch",
    "dev": "yarn && yarn run codegen && concurrently --kill-others --names 'src,dev,gen,test' 'lerna run --parallel watch' 'sleep 10; lerna run --parallel dev' 'sleep 10; yarn run client codegen:watch' 'sleep 15; yarn test:watch'",
    "lint": "tsc --noEmit && eslint --ext .js,.jsx,.ts,.tsx,.graphql .",
    "build": "yarn run codegen && lerna run build",
    "watch": "yarn run codegen && lerna run watch",
    "codegen": "yarn run client codegen",
    "licenses": "yarn --silent licenses generate-disclaimer > LICENSES.md",
    "--packages--": "",
    "client": "cd @app/client && yarn run",
    "cypress": "cd @app/cypress && yarn run",
    "migrations": "cd @app/migrations && yarn run",
    "server": "cd @app/server && yarn run",
    "worker": "cd @app/worker && yarn run"
  },
  "author": "Benjie Gillam <code@benjiegillam.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "lerna": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.2.0",
    "eslint_d": "^8.0.0",
    "jest": "^24.9.0",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.1.0",
    "typescript": "^3.5.3"
  },
  "workspaces": {
    "packages": [
      "@app/*"
    ],
    "nohoist": [
      "cypress"
    ]
  }
}
